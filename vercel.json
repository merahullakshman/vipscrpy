{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ],
    "functions": {
        "api/index.js": {
            "memory": 3008,
            "maxDuration": 60
        }
    },
    "env": {
        "NODE_ENV": "production"
    }
}